@model IEnumerable<AppProductos.Models.Producto>
@{
    ViewData["Title"] = "Products Page";
}

<h2>Lista de Productos</h2>
<a href="/Home/AddProduct" class="btn btn-primary">Agregar Producto</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>@producto.Categoria</td>
                <td>
                    <a href="/Home/EditProduct/@producto.Id" class="btn btn-success btn-sm">Editar</a>
                    <form asp-action="DeleteProduct" asp-route-id="@producto.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
